<!-- Test world model Move action description -->
<Actions>
    <Action Name="MoveUpRight">
        <Arguments>
            <Argument Type="Agent" Name ="self"/>
            <Argument Type="int" Name="val"/>
        </Arguments>
        <Actions>
            <CharacteristicChange ChName="self.LocationX" Modifier="1"/>
            <CharacteristicChange ChName="self.LocationZ" Modifier="-1"/>
        </Actions>
    </Action>

    <Action Name="MoveRight">
        <Arguments>
            <Argument Type="Agent" Name ="self"/>
            <Argument Type="int" Name="val"/>
        </Arguments>
        <Actions>
            <CharacteristicChange ChName="self.LocationX" Modifier="1"/>
            <CharacteristicChange ChName="self.LocationY" Modifier="-1"/>
        </Actions>
    </Action>

    <Action Name="MoveDownRight">
        <Arguments>
            <Argument Type="Agent" Name ="self"/>
            <Argument Type="int" Name="val"/>
        </Arguments>
        <Actions>
            <CharacteristicChange ChName="self.LocationY" Modifier="-1"/>
            <CharacteristicChange ChName="self.LocationZ" Modifier="1"/>
        </Actions>
    </Action>

    <Action Name="MoveDownLeft">
        <Arguments>
            <Argument Type="Agent" Name ="self"/>
            <Argument Type="int" Name="val"/>
        </Arguments>
        <Actions>
            <CharacteristicChange ChName="self.LocationX" Modifier="-1"/>
            <CharacteristicChange ChName="self.LocationZ" Modifier="1"/>
        </Actions>
    </Action>

    <Action Name="MoveLeft">
        <Arguments>
            <Argument Type="Agent" Name ="self"/>
            <Argument Type="int" Name="val"/>
        </Arguments>
        <Actions>
            <CharacteristicChange ChName="self.LocationX" Modifier="-1"/>
            <CharacteristicChange ChName="self.LocationY" Modifier="1"/>
        </Actions>
    </Action>

    <Action Name="MoveUpLeft">
        <Arguments>
            <Argument Type="Agent" Name ="self"/>
            <Argument Type="int" Name="val"/>
        </Arguments>
        <Actions>
            <CharacteristicChange ChName="self.LocationY" Modifier="1"/>
            <CharacteristicChange ChName="self.LocationZ" Modifier="-1"/>
        </Actions>
    </Action>
</Actions>